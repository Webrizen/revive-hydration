{
  "manifest_version": 3,
  "name": "Revive Hydration - Advanced Water Reminder",
  "version": "2.0",
  "description": "Customizable water reminder with settings",
  "permissions": ["alarms", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}